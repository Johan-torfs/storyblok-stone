---
import Image from "../0_atoms/Image.astro";
import Text from "../0_atoms/Text.astro";
import Title from "../0_atoms/Title.astro";
import Button from "../0_atoms/Button.astro";
import Card from "../1_molecules/Card.astro";
import Grid from "../4_layout_elements/Grid.astro";
import Icon from "../0_atoms/Icon.astro";
import Flex from "../4_layout_elements/Flex.astro";
---

<Card padding={0} shadow={true}>
    <Grid cols={{sm: 2}}>
        <Image src="/image-product-mobile.jpg" alt="Astro Logo" class="sm:hidden" />
        <Image src="/image-product-desktop.jpg" alt="Astro Logo" class="hidden sm:block" />
        <Grid cols={{gap: 4}} padding={8} content="between">
            <Text font="montserrat" uppercase={true} size="sm" color="text-slate-400">P e r f u m e</Text>
            <Title htmlTag="h3" font="fraunces" size="3xl">Gabrielle Essence Eau De Parfum</Title>
            <Text font="montserrat" size="sm" color="text-slate-600">A floral, solar and voluptuous interpretation composed by Olivier Polge, Perfumer-Creator for House of CHANEL</Text>
            <Flex items="center" gap={4}>
                <Text size="3xl" font="fraunces" color="text-dark-cyan">$149.99</Text>
                <Text size="sm" color="text-slate-400" decoration="line-through">$169.99</Text>
            </Flex>
            <Button rounded="md" paddingX={5} paddingY={4} color="dark-cyan">
                <Icon icon={{type: "fas", icon: "fa-cart-shopping"}} color="white"/>
                <span class="ml-2">Add to Cart</span>   
            </Button>
        </Grid>
    </Grid>
</Card>