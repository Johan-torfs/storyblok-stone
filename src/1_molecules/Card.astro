---
import type { SbBlokData } from '@storyblok/astro';
import type { PaddingX, PaddingY } from '../tailwind/types/Padding';
import type { BorderRadius } from '../tailwind/types/Border';
import type { Visibility } from '../tailwind/types/Visibility';

import PrimaryCard from './cards/PrimaryCard.astro';
import TransparentCard from './cards/TransparentCard.astro';

export interface StoryblokCard extends SbBlokData, PaddingX, PaddingY, BorderRadius, Visibility {
    component: 'card',
    content: [SbBlokData],
    type: 'primary-card' | 'transparent-card',
}

interface Props {
    blok: StoryblokCard;
}

const { blok } = Astro.props;

if (!blok.type) blok.type = 'primary-card';
---

{blok.type == 'primary-card' ? (
    <PrimaryCard blok={blok}/>
) : null }

{blok.type == 'transparent-card' ? (
    <TransparentCard blok={blok}/>
) : null }