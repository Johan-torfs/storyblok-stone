---
const { score, total } = Astro.props;
---

<div class="flex flex-col justify-center items-center bg-gradient-to-b from-[#6522c9] to-[#2121ca]/0 p-12 rounded-full">
    <div class="aspect-square h-20 flex flex-col justify-center items-center ">
        <div class="text-5xl text-white">{score}</div>
        <div class="text-slate-400">of {total}</div>
    </div>
</div>