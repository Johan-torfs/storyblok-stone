---
import { storyblokEditable, type SbBlokData } from '@storyblok/astro';
import type { TextColor } from '../tailwind/types/Color';
import { getClassName, getTextColorClasses } from '../tailwind/class_name_compiler';

interface StoryblokIcon extends SbBlokData, TextColor {
    component: "icon";
    icon: {
        type: string;
        icon: string;
    };
}


interface Props {
    blok: StoryblokIcon;
}

const { blok } = Astro.props;

const className = getClassName(blok, {
    decorators: [
        {decorator: getTextColorClasses},
    ]
});
---

<i {...storyblokEditable(blok)} class:list={[blok.icon.type, blok.icon.icon, className]} aria-hidden="true"></i>